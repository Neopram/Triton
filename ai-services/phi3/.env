# Model Configuration
PHI3_MODEL_PATH=microsoft/phi-3-mini-4k-instruct
PHI3_MAX_TOKENS=1024
PHI3_DEFAULT_TEMPERATURE=0.5
PHI3_TOP_P=0.9
PHI3_TOP_K=50
PHI3_REPETITION_PENALTY=1.1
PHI3_MAX_CONTEXT_LENGTH=4096

# Server Configuration
PHI3_HOST=0.0.0.0
PHI3_PORT=8001
PHI3_LOG_LEVEL=INFO
PHI3_WORKERS=2

# Resource Management
PHI3_IDLE_TIMEOUT=1800
PHI3_MAX_CONCURRENT_REQUESTS=5
PHI3_REQUEST_TIMEOUT=15000

# Memory Optimization
PHI3_LOW_CPU_MEM_USAGE=true
PHI3_USE_4BIT=true
PHI3_USE_FLASH_ATTENTION=false

# Caching Configuration
PHI3_CACHE_ENABLED=true
PHI3_CACHE_TTL=3600
PHI3_CACHE_MAX_ENTRIES=500

# Security
PHI3_API_KEY=LOCAL_PHI3_API_KEY
PHI3_CORS_ORIGINS=http://localhost:3000,http://localhost:5000

# Offline Mode Configuration
PHI3_OFFLINE_MODE_ENABLED=true
PHI3_OFFLINE_RESPONSE_QUALITY=medium